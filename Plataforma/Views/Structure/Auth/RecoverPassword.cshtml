@inject ConfigurationsService _configurations
@using Plataforma.Services.Components
@using Plataforma.Dtos.Auth
@model RecoverPasswordDto
@{
    Layout = "Auth/_Layout";
}

<form asp-action="RecoverPassword" asp-controller="Auth">
    @if ((ViewData["Error"]?.ToString() ?? "") != "") {
        <div class="field-validation-error mb-3">@ViewData["Error"]</div>
    }
    <div class="mb-3">Introduza o seu endereço de e-mail para repor a sua password</div>
    <div class="form-group">
        <label asp-for="Code">Código</label>
        <div class="input-group">
            <span class="input-group-text cursor-pointer"><i class="fa-solid fa-code-branch"></i></span>
            <input asp-for="Code" class="form-control" placeholder="E-mail" maxlength="10"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <div class="input-group">
            <span class="input-group-text cursor-pointer"><i class="fa-solid fa-lock"></i></span>
            <input asp-for="Password" class="form-control" placeholder="Password" maxlength="@typeof(RecoverPasswordDto).GetMaxLength(nameof(RecoverPasswordDto.Password))"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm">Confirmação de Password</label>
        <div class="input-group">
            <span class="input-group-text cursor-pointer"><i class="fa-solid fa-lock"></i></span>
            <input asp-for="PasswordConfirm" class="form-control" placeholder="Confirmação de Password" maxlength="@typeof(RecoverPasswordDto).GetMaxLength(nameof(RecoverPasswordDto.PasswordConfirm))"/>
        </div>
    </div>
    <button class="btn btn-primary d-block w-100" type="submit">Repor password</button>
</form>