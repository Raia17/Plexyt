@inject ConfigurationsService _configurations
@using Plataforma.Services.Components
@model Plataforma.Dtos.Auth.ForgotPasswordDto
@{
    Layout = "Auth/_Layout";
}

<form asp-action="ForgotPassword" asp-controller="Auth">
    <div class="mb-3">Introduza o seu endereço de e-mail para repor a sua password</div>
    <div class="form-group">
        <label asp-for="Email">Endereço de e-mail</label>
        <div class="input-group">
            <span class="input-group-text cursor-pointer"><i class="fa-solid fa-user"></i></span>
            <input asp-for="Email" type="email" class="form-control" placeholder="E-mail" autofocus/>
        </div>
    </div>
    <button class="btn btn-primary d-block w-100" type="submit">Obter código</button>
</form>